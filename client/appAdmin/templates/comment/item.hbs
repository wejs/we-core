<div class="comment clearfix">
  <div class="user-avatar-area comment-left">
    <span class="creator-avatar">
      {{user-avatar width="25px" heigth="25px" user=creator size="thumbnail"}}
    </span>
  </div>
  <div class="comment-right">
    <div class="comment-header">
        <span class="comment-username">
          {{#link-to 'user' creator.id}}
            {{creator.displayName}}
          {{/link-to}}
        </span>
        <span class="createdAt comment-date">{{format-date createdAt}}</span>
    </div>
    <div class="comment-body">
      {{#if isEditing}}
        <div class="comment-textarea form-group">
          {{we-wysiwyg-editor name="body" value=body}}
        </div>
        <div class="actions">
          <div class="btn-group btn-group-xs">
            <button type="button" {{action 'sendComment'}} class="btn btn-primary">{{t 'Send'}}</button>
            <button type="button" {{action 'closeComentTextarea'}} class="btn btn-default">{{t 'Cancel'}}</button>
          </div>
        </div>
      {{else}}
        <div class="text">{{html body}}</div>
      {{/if}}
    </div>

    {{#unless isEditing}}
      <div class="actions">
        {{#can 'comment_update' 'comment' 'model'}}
          <button type="button" class="btn btn-xs btn-default" {{action 'edit'}}>
            <span class="glyphicon glyphicon-edit text-primary"></span> {{t "Edit"}}
          </button>
        {{/can}}

        {{#can 'comment_destroy' 'comment' 'model'}}
          <button class="btn btn-xs btn-default" {{action 'deleteComment' content}}>
            <span class="glyphicon glyphicon-remove text-danger"></span> {{t "Delete"}}
          </button>
        {{/can}}
      </div>
    {{/unless}}
  </div>
</div>